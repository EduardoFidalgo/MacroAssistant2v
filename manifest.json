{
  "manifest_version": 3,
  "name": "MacroPaste",
  "version": "2.0",
  "description": "Extens√£o para criar e usar macros de texto rapidamente",
  "permissions": [
    "storage",
    "activeTab",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "icons/icon128.svg"
  }
}
