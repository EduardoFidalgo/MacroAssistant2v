{
  "manifest_version": 3,
  "name": "OPS Expander 2.0",
  "version": "2.0",
  "description": "Extens√£o para criar e usar macros de texto rapidamente",
  
  "permissions": [
    "storage",
    "activeTab",
    "clipboardWrite",
    "tabs"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.svg"
  },

  "options_page": "opsexpender/dashboard.html",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "128": "icons/icon128.svg"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
